<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.reindeercrafts.notificationpeek.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/instruction_text"
            android:textAppearance="?android:textAppearanceLarge"
            android:fontFamily="sans-serif-light"
            android:layout_margin="@dimen/activity_vertical_margin"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:showDividers="middle"
            android:divider="?android:dividerHorizontal"
            android:dividerPadding="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notification_access"
                style="?android:borderlessButtonStyle"
                android:padding="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:id="@+id/notification_access_btn"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_access"
                style="?android:borderlessButtonStyle"
                android:padding="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:id="@+id/device_access_btn"/>

    </LinearLayout>



</RelativeLayout>
